{
  "name": "@gerhobbelt/dat.GUI",
  "version": "0.7.6-3",
  "description": "A lightweight graphical user interface for changing variables in JavaScript.",
  "main": "build/dat.gui.js",
  "module": "build/dat.gui.module.js",
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "tests"
  },
  "scripts": {
    "dev": "concurrently --names \"ROLLUP,HTTP\" -c \"bgBlue.bold,bgGreen.bold\" \"rollup -c -w -m inline\" \"serve --port 8080\"",
    "build": "rollup -c && prettier --print-width 120 --write build/**/*.js && rollup -c rollup.config.min.js",
    "watch": "rollup --watch -c && rollup --watch -c rollup.config.js",
    "build-docs": "jsdoc2md -f src/dat/gui/GUI.js src/dat/controllers/Controller.js src/dat/controllers/NumberController.js | replace-between --target API.md --token API",
    "lint": "eslint src",
    "fix": "eslint --fix src && prettier --print-width 120 --write src/**/*.js",
    "preversion": "npm run lint",
    "version": "npm run build && git add -A build",
    "postversion": "git push && git push --tags && npm publish",
    "prettier": "prettier --print-width 120 --write *.js **/*.js **/*.ts",
    "pub": "npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:dataarts/dat.gui.git"
  },
  "keywords": [
    "data",
    "binding",
    "control",
    "panel",
    "data",
    "GUI"
  ],
  "author": "Data Arts Team, Google",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/dataarts/dat.gui/issues"
  },
  "homepage": "https://github.com/dataarts/dat.gui",
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "concurrently": "^4.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "qunit": "2.9.2",
    "extend": "^3.0.2",
    "jsdoc-to-markdown": "^5.0.0",
    "prettier": "^1.17.1",
    "replace-between": "0.0.8",
    "rollup": "^1.12.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.0",
    "rollup-plugin-sass": "^1.2.2",
    "rollup-plugin-uglify": "^6.0.2",
    "serve": "^11.0.0",
    "uglify-js": "^3.5.13"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "comma-dangle": 0,
      "func-names": 0,
      "no-alert": 0,
      "no-console": 1,
      "no-unused-vars": 0,
      "no-multi-assign": 0,
      "no-use-before-define": 0,
      "prefer-rest-params": 0,
      "prefer-template": 0,
      "prefer-destructuring": "warn",
      "no-mixed-operators": 0,
      "no-undef": 0,
      "no-underscore-dangle": 0,
      "prefer-arrow-callback": 0,
      "space-before-function-paren": 0,
      "global-require": 0,
      "object-shorthand": 0,
      "max-len": 0,
      "no-param-reassign": 0,
      "consistent-return": 0,
      "no-restricted-syntax": 0,
      "no-restricted-globals": 0,
      "no-bitwise": 0,
      "no-plusplus": 0,
      "quotes": ["error", "double", { "avoidEscape": true }]
    }
  },
  "dependencies": {
    "nan": "^2.14.0",
    "wsgif": "^1.0.0"
  }
}
